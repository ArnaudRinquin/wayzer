{
  "name": "weather",
  "version": "1.0.0",
  "description": "A simple weather app displaying weather from multiple sources",
  "main": "index.js",
  "scripts": {
    "start": "npm run client:build && npm run server:start",
    "client:build": "browserify client/index.js -o public/script.js",
    "client:dev": "watchify client/index.js -o public/script.js",
    "server:start": "node server/index.js",
    "server:dev": "open http://0.0.0.0:3000 && nodemon server/index.js",
    "test:unit": "karma start",
    "test:unit:dev": "karma start karma.dev.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ArnaudRinquin/weather"
  },
  "keywords": [
    "angular",
    "demo"
  ],
  "author": "Arnaud Rinquin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ArnaudRinquin/weather/issues"
  },
  "homepage": "https://github.com/ArnaudRinquin/weather",
  "dependencies": {
    "angular": "^1.3.15",
    "angular-ui-router": "^0.2.13",
    "browserify": "^9.0.3",
    "express": "^4.12.3"
  },
  "devDependencies": {
    "angular-mocks": "^1.3.15",
    "jasmine": "^2.2.1",
    "jasmine-core": "^2.2.0",
    "karma": "^0.12.31",
    "karma-browserify": "^4.0.0",
    "karma-chrome-launcher": "^0.1.7",
    "karma-cli": "0.0.4",
    "karma-jasmine": "^0.3.5",
    "karma-phantomjs-launcher": "^0.1.4",
    "nodemon": "^1.3.7",
    "watchify": "^2.4.0"
  }
}
